function draw_palette()
	cls(0)
	--15,8 center
--	spr(1, 15*tilesize,8*tilesize)
--	rectfill2(0, 0, 10, 10, 0)
--	rectfill2(10, 0, 10, 10, 9)
	draw_pallete()
	--debug
	foreach(deug, print)
end

function draw_pallete()
	local start_pos = { x = 0, y = 0}
	local size = 32
	for i=0,32 do
		rectfill2(start_pos.x + size*(i-4*flr(i*0.25)), start_pos.y + size*flr(i*0.25), size, size, i)
	end
end

-- simple debug(msg) msg = string,number,nil,boolean E.g. debug("hola") print hola
-- multiple debug({string, nil, number, bolean }) E.g. debug({"hola", true, 24}) print holatrue24
function debug(msg) 
	local max_lenght = 25
	if #deug >= max_lenght then deug = {} end
	
	if type(msg) == "table" then
		local message = ""
		for i=1,#msg == 1 and 2 or #msg do
			message = message..tostr(msg[i])
		end
		add(deug, message)
	else
		add(deug, tostr(msg))	
	end
end

function rectfill2(_x,_y,_w,_h,_c)
	rectfill(_x,_y,_x+max(_w-1,0),_y+max(_h-1,0),_c)
end
